<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAddImages"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="43dp"
        android:text="Select"
        app:layout_constraintEnd_toEndOf="@+id/rvAddImages"
        app:layout_constraintTop_toTopOf="@+id/rvAddImages"
        tools:visibility="visible"/>

    <Button
        android:id="@+id/btnExport"
        android:layout_width="67dp"
        android:layout_height="60dp"
        android:layout_marginStart="39dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/export"
        android:contentDescription="export"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/rvAddImages"
        app:layout_constraintStart_toStartOf="@+id/rvAddImages"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="67dp"
        android:layout_height="60dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/delete"
        android:contentDescription="delete"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/rvAddImages"
        app:layout_constraintEnd_toEndOf="@+id/rvAddImages" />

    <Button
        android:id="@+id/btnAdd"
        android:background="@drawable/capture_button"
        android:layout_width="91dp"
        android:layout_height="86dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="180dp"
        android:text="+"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="@+id/rvAddImages"
        app:layout_constraintEnd_toEndOf="@+id/rvAddImages"
        app:srcCompat="@android:drawable/ic_menu_add"
        android:visibility="visible"/>


</androidx.constraintlayout.widget.ConstraintLayout>